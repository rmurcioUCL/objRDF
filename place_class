def mainAirbnb(source, ntpath, ttlpath):
    rdf = RDFCreator()
    rdf.createAirbnbObj(source)
    rdf.createNt().serialize(format='nt', destination=ntpath)
    rdf.createRDF().serialize(format='turtle', destination=ttlpath)
    print('The files in place.')

